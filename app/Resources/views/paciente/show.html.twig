
{% extends 'HospitalBundle:Default:frontHabilitado.twig.html' %}

{% block cuerpo %}
    <h1>Paciente</h1>

    <div class="form-container table-container"> 
     <form  class="form-horizontal" action='vaa' method='POST'>
        <div class="form-group row"> 
            <label class = "form-control-label col-sm-2" for="nombre">Nombre :</label>
            <div class = "col-sm-10">
              <p class = "form-control-static"> {{ paciente.nombre }}</p>
            </div>
        </div>
       
        </div>
        <div class="form-group row"> 
            <label class = "form-control-label col-sm-2" for="apellido"> Apellido :</label>
            <div class = "col-sm-10">
              <p class = "form-control-static"> {{ paciente.apellido }}</p>
            </div>
        </div>
        <div class="form-group row"> 
            <label class = "form-control-label col-sm-2" for="nacimiento">Fecha de Nacimiento :</label>
            <div class = "col-sm-10">
              <p class = "form-control-static">{% if paciente.nacimiento %}{{ paciente.nacimiento|date('d-m-Y') }}{% endif %}</p>
            </div>
        </div>
        <div class="form-group row"> 
            <label class = "form-control-label col-sm-2" for="genero">Genero :</label>
            <div class = "col-sm-10">
              <p class = "form-control-static"> {{ paciente.genero }}</p>
            </div>
        </div>
        <div class="form-group row"> 
            <label class = "form-control-label col-sm-2" for="TipoDoc">Tido de documento :</label>
            <div class = "col-sm-10">
              <p class = "form-control-static" id= "docu"> {{ paciente.tipoDoc | upper }}</p>
            </div>
        </div>
        <div class="form-group row"> 
            <label class = "form-control-label col-sm-2" for="numDoc">Numero de documento :</label>
            <div class = "col-sm-10">
              <p class = "form-control-static"> {{ paciente.numDoc }}</p>
            </div>
        </div>
        <div class="form-group row"> 
            <label class = "form-control-label col-sm-2" for="domicilio">Domicilio :</label>
            <div class = "col-sm-10">
              <p class = "form-control-static"> {{ paciente.domicilio }}</p>
            </div>
        </div>
        <div class="form-group row"> 
            <label class = "form-control-label col-sm-2" for="telefono">Telefono :</label>
            <div class = "col-sm-10">
              <p class = "form-control-static"> {{ paciente.telefono }}</p>
            </div>
        </div>
        <div class="form-group row"> 
            <label class = "form-control-label col-sm-2" for="obraSocial">Obra Social :</label>
            <div class = "col-sm-10">
              <p class = "form-control-static" id="obraPac"> {{ paciente.obraSocial }}</p>
            </div>
        </div>
        <a class="btn btn-primary btn-md col-md-1" href="{{ path('paciente_index') }}">VOLVER</a> 
        <a href="{{ path('paciente_edit', { 'id': paciente.id }) }}" class="btn btn-success btn-md col-md-1 col-md-offset-1">EDITAR</a>
        {% if not paciente.datosDemograficos %}
            <input type="reset" value="Cargar datos demograficos" class="btn btn-info col-md-offset-1 " onClick="location.href='{{ path('datosdemograficos_new', { 'paciente': paciente.id }) }}'" >            
        {% else %}
            <input type="reset" value="Ver datos demograficos" class="btn btn-info col-md-offset-1" onClick="location.href='{{ path('datosdemograficos_show', { 'paciente': paciente.id }) }}'" >
        {% endif %}       
    </form>
</div>
{% endblock %}
