{% extends 'HospitalBundle:Default:frontHabilitado.twig.html' %}

{% block cuerpo %}
    <h1>Datos Demograficos</h1>
    <div class="form-container table-container"> 
        <form  class="form-horizontal" action='vaa' method='POST'>
            <div class="form-group row"> 
                <label class = "form-control-label col-sm-2" for="heladera">Heladera :</label>
                <div class = "col-sm-10">
                  <p class = "form-control-static"> {% if datosDemografico.heladera %}SI{% else %}No{% endif %}</p>
                </div>
            </div>
            <div class="form-group row"> 
                <label class = "form-control-label col-sm-2" for="electricidad">Electricidad :</label>
                <div class = "col-sm-10">
                  <p class = "form-control-static"> {% if datosDemografico.electricidad %}SI{% else %}No{% endif %}</p>
                </div>
            </div>
            <div class="form-group row"> 
                <label class = "form-control-label col-sm-2" for="mascota">Mascota :</label>
                <div class = "col-sm-10">
                  <p class = "form-control-static"> {% if datosDemografico.Mascota %}SI{% else %}No{% endif %}</p>
                </div>
            </div>
            <div class="form-group row"> 
                <label class = "form-control-label col-sm-2" for="vivienda">Tipo de vivienda :</label>
                <div class = "col-sm-10">
                  <p class = "form-control-static"> {{vivienda}}</p>
                </div>
            </div>
            <div class="form-group row"> 
                <label class = "form-control-label col-sm-2" for="calefaccion">Tipo de calefaccion :</label>
                <div class = "col-sm-10">
                  <p class = "form-control-static"> {{calefaccion}}</p>
                </div>
            </div>
            <div class="form-group row"> 
                <label class = "form-control-label col-sm-2" for="agua">Tipo de agua :</label>
                <div class = "col-sm-10">
                  <p class = "form-control-static"> {{agua}}</p>
                </div>
            </div>
        </form>
    </div>   
    <a class="btn btn-success btn-md col-md-1" href="{{ path('datosdemograficos_edit', { 'id': datosDemografico.id, 'paciente': paciente }) }}">EDITAR</a>
    <a class="btn btn-primary btn-md col-md-1 col-md-offset-1" href="{{ path('paciente_show', { 'id': paciente }) }}">VOLVER</a>
{% endblock %}
