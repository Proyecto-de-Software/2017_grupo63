{% extends 'HospitalBundle:Default:frontHabilitado.twig.html' %}

{% block javaScript %}
    {{ parent() }}
    <script type="text/javascript" src ="{{ absolute_url(asset('js/confirmarBorrarU.js')) }}" ></script>
{% endblock %}

{% block cuerpo %}
    <h1>Usuario</h1>

    <div class="form-container table-container"> 
     <form  class="form-horizontal" action='val' method='POST'>
       
        <div class="form-group"> 
            <label class = "form-control-label col-sm-2" for="username">Nombre de usuario :</label>
            <div class = "col-sm-10">
              <p class = "form-control-static"> {{ usuario.username }}</p>
            </div>
        </div>
        <div class="form-group"> 
            <label class = "form-control-label col-sm-2" for="first_name">Estado :</label>
            <div class = "col-sm-10">
              <p class = "form-control-static">
                {% if usuario.enabled %} 
                     activo
                 {% else %}
                     bloqueado
                {% endif %}
              </p>  
            </div>
        </div>
        <div class="form-group"> 
            <label class = "form-control-label col-sm-2" for="email">Correo Electronico :</label>
            <div class = "col-sm-10">
              <p class = "form-control-static"> {{ usuario.email }}</p>
            </div>
        </div>
        <div class="form-group"> 
            <label class = "form-control-label col-sm-2" for="first_name">Nombre :</label>
            <div class = "col-sm-10">
              <p class = "form-control-static"> {{ usuario.firstName }}</p>
            </div>
        </div>
        <div class="form-group"> 
            <label class = "form-control-label col-sm-2" for="last_name">Apellido :</label>
            <div class = "col-sm-10">
              <p class = "form-control-static"> {{ usuario.lastName }}</p>
            </div>
        </div>
        <div class="form-group"> 
            <label class = "form-control-label  col-sm-2" for="roles">Roles :</label>
            <div class = "col-sm-4">
              <select multiple class="form-control " id="roles" disabled>
                {% if 'ROLE_ADMIN' in usuario.roles %} <option>Administrador</option> {% endif %}
                {% if 'ROLE_PED' in usuario.roles %} <option>Pediatra</option> {% endif %}
                {% if 'ROLE_REC' in usuario.roles %} <option>Recepcionista</option> {% endif %}    
              </select>
            </div> 
        </div>


        <a  class="btn btn-primary btn-md col-md-1" href="{{ path('usuario_index') }}"> VOLVER </a>
        <a href="{{ path('usuario_edit', { 'id': usuario.id }) }}" class="btn btn-success btn-md col-md-1 col-md-offset-1">EDITAR</a>    
        
    </form>
</div>
    {{ form_start(delete_form) }}
        <input type="submit" value="BORRAR" class="borrar btn btn-danger btn-md col-md-1 col-md-offset-1">
    {{ form_end(delete_form) }}
{% endblock %}
